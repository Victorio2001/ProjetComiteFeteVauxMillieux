{% extends 'base.html.twig' %}
{% block container %}
    <div class="container mt-5 ">
        <div class="d-flex justify-content-start flex-wrap mb-3 mr-2 ">
            <a href="{{ path('app_reservation_index') }}" class="btn btn-arrow mr-3 shadow-sm ">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16"  class="bi bi-arrow-left" viewBox="0 0 16 16">
                    <path fill-rule="evenodd" d="M11.354 1.646a.5.5 0 0 1 0 .708L5.707 8l5.647 5.646a.5.5 0 0 1-.708.708l-6-6a.5.5 0 0 1 0-.708l6-6a.5.5 0 0 1 .708 0z"/>
                </svg>
            </a>
        </div>
        <h1>Réservation:</h1>
        <table class="table">
            <tbody>
            <tr>
                <th>Objets Réservée</th>
                <td>{% for materiel in materielsReservation %} {{materiel.Materiel.NomMateriel}} <strong>({{ materiel.QuantiteReservation }})</strong>,   {% endfor %}</td>
            </tr>

            <tr>
                <th>Réservant</th>
                <td>{{ reservation.nomUserReservation }} {{ reservation.prenomUserReservation }}</td>
            </tr>
            <tr>
                <th>Archiver</th>
                <td>{{ reservation.archiverReservation ? 'Oui' : 'Non' }}</td>
            </tr>
            <tr>
                <th>CommentaireReservation</th>
                <td>{{ reservation.commentaireReservation }}</td>
            </tr>
            <tr>
                <th>Etat réservation</th>
                <td>{{ reservation.etat }}</td>
            </tr>
            <tr>
                <th>E-mail réservation</th>
                <td>{{ reservation.mailReservation }}</td>
            </tr>
            <tr>
                <th>Statut Réservant</th>
                <td>{{ reservation.nomAsso }}</td>
            </tr>



            <tr>
                <th>DateRetour</th>
                <td>{{ reservation.dateRetour ? reservation.dateRetour|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>DateEmprunt</th>
                <td>{{ reservation.dateEmprunt ? reservation.dateEmprunt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Date Réservation</th>
                <td>{{ reservation.dateReservation ? reservation.dateReservation|date('Y-m-d H:i:s') : '' }}</td>
            </tr>

            </tbody>
        </table>

        <div class="d-flex flex-row">
            <div class=" p-2">
                <a class="btn btn-light" href="{{ path('app_reservation_edit', {'id': reservation.id}) }}">Modifier l'élement</a>
            </div>
            <div class="p-2">
                {{ include('reservation/_delete_form.html.twig') }}
            </div>
        </div>
    </div>

{% endblock %}
