{% extends 'base.html.twig' %}

{% block container %}
    <div class="container d-flex justify-content-center align-items-center mt-5">
        <div class="d-flex flex-row row justify-content-center align-items-center al px-4 py-5 px-md-5 mx-2" style="background-color: #F5F5F5">

            <div class="col-lg-6">
            <img style="width: 100%; height: auto; max-height: 400px" src="{{ asset('Image/logo_couleurPNG.png') }}" alt="Logo">
            </div>

            <div class="col-lg-6 ">
                <div class="card">
                    <div class="card-body py-5 px-md-5">
                        {% if error %}
                            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                        {% endif %}

                        {% if app.user %}
                            <div class="mb-3">
                                Vous êtes connectée en tant que  {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}"> Déconnexion</a>
                            </div>
                        {% endif %}

                        <form action="{{ path('app_login') }}" method="post">
                            <div class="mb-3">
                                <label for="_username" class="form-label">Votre e-mail</label>
                                <input class="form-control" type="email" value="{{ last_username }}" name="_username" id="username" autocomplete="email" required autofocus>
                            </div>
                            <div class="mb-3">
                                <label for="password" class="form-label">Mot de passe</label>
                                <input  type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required>
                                <input type="hidden" name="_csrf_token"
                                       value="{{ csrf_token('authenticate') }}"
                                >
                            </div>
                            <button type="submit" class="btn btn-light mt-2 shadow-sm">Se connecter</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        </div>
    </div>
{% endblock %}
