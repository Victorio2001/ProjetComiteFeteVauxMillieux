{% extends 'base.html.twig' %}

{% block title %}Nouvelle Image Manifestation{% endblock %}

{% block container %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h2 class="card-title text-center">Ajout d'image pour la manifestation</h2>
                    {{ form_start(formPhoto) }}
                        <div class="form-group mb-1">
                            {{ form_widget(formPhoto.titreImage, {'attr': {'class': 'form-control', 'placeholder': 'Titre de l\'image'}}) }}
                        </div>
                        <div class="form-group mb-1">
                            {{ form_widget(formPhoto.descriptionImage, {'attr': {'class': 'form-control', 'placeholder': 'Description de l\'image'}}) }}
                        </div>
                        <div class="form-group mb-1">
                            {{ form_widget(formPhoto.imageAsso, {'attr': {'class': 'form-control', 'placeholder': 'Image de l\'association'}}) }}
                        </div>
                        <div class="text-center mt-3">
                            {{ form_widget(formPhoto.Envoyer, {'attr': {'class': 'btn btn-success'}}) }}
                        </div>
                    {{ form_end(formPhoto) }}
                </div>
            </div>
            <div class="mt-3 text-center">
                <a href="{{ path('app_manifestation_index') }}" class="btn btn-secondary">Retour Ã  la liste</a>
            </div>
        </div>
    </div>
</div>
{% endblock %}
