{% extends 'base.html.twig' %}

{% block title %}Nouvelle Manifestation{% endblock %}

{% block container %}
<div class="container mt-5">
    <div class="d-flex justify-content-start flex-wrap mb-3">
        <a href="{{ path('app_manifestation_index') }}" class="btn btn-arrow mr-3 shadow-sm">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" class="bi bi-arrow-left" viewBox="0 0 16 16">
                <path fill-rule="evenodd" d="M11.354 1.646a.5.5 0 0 1 0 .708L5.707 8l5.647 5.646a.5.5 0 0 1-.708.708l-6-6a.5.5 0 0 1 0-.708l6-6a.5.5 0 0 1 .708 0z"/>
            </svg>
            Retour
        </a>
    </div>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h2 class="card-title text-center">Formulaire Manifestation</h2>
                    {{ form_start(form) }}
                        <div class="form-group">
                            {{ form_label(form.titreManifestation) }}
                            {{ form_widget(form.titreManifestation, {'attr': {'class': 'form-control', 'placeholder': 'Titre de la manifestation', 'maxlength': 255}}) }}
                            {{ form_errors(form.titreManifestation) }}
                        </div>
                        <div class="form-group mb-2">
                            {{ form_label(form.descriptionManifestation) }}
                            {{ form_widget(form.descriptionManifestation, {'attr': {'class': 'form-control', 'placeholder': 'Description de la manifestation', 'maxlength': 255}}) }}
                            {{ form_errors(form.descriptionManifestation) }}
                        </div>
                        <div class="form-group mb-2">
                            {{ form_label(form.dateDebutManifestation) }}
                            {{ form_widget(form.dateDebutManifestation, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.dateDebutManifestation) }}
                        </div>
                        <div class="form-group mb-2">
                            {{ form_label(form.dateFinManifestation) }}
                            {{ form_widget(form.dateFinManifestation, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.dateFinManifestation) }}
                        </div>
                        <div class="text-center mt-3">
                            {{ form_widget(form.Envoyer, {'attr': {'class': 'btn btn-success'}}) }}
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
