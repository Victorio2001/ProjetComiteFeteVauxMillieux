{% extends 'base.html.twig' %}


{% block container %}
    <div class="container mt-5">
        <div class="d-flex justify-content-start flex-wrap mb-3 mr-2 ">
            <a href="{{ path('app_materiel_index') }}" class="btn btn-arrow mr-3 shadow-sm ">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16"  class="bi bi-arrow-left" viewBox="0 0 16 16">
                    <path fill-rule="evenodd" d="M11.354 1.646a.5.5 0 0 1 0 .708L5.707 8l5.647 5.646a.5.5 0 0 1-.708.708l-6-6a.5.5 0 0 1 0-.708l6-6a.5.5 0 0 1 .708 0z"/>
                </svg>
            </a>
        </div>
        <div class="row">
            <h1>Matériel</h1>
            <div class="col-8">
                <table class="table">
                    <tbody>
                    <tr>
                        <th>Nom Materiel</th>
                        <td>{{ materiel.nomMateriel }}</td>
                    </tr>
                    <tr>
                        <th>Description Materiel</th>
                        <td>{{ materiel.descriptionMateriel }}</td>
                    </tr>
                    <tr>
                        <th>Prix Materiel (euros)</th>
                        <td>{{ materiel.prixMateriel }}</td>
                    </tr>
                    <tr>
                        <th>Nombre Exemplaire Materiel</th>
                        <td>{{ materiel.nombreExemplaireMateriel }}</td>
                    </tr>
                    <tr>
                        <th>Crée le:</th>
                        <td>{{ materiel.createdAt ? materiel.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                    </tr>
                    <tr>
                        <th>Modifiée le:</th>
                        <td>{{ materiel.updatedAt ? materiel.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                    </tr>
                    </tbody>
                </table>

                <div>
                    <a class="btn btn-light" href="{{ path('app_materiel_edit', {'id': materiel.id}) }}">Modifier l'élement</a>
                    {{ include('materiel/_delete_form.html.twig') }}
                </div>
            </div>
            <div class="col-4 mt-3">
                <img src="{{ asset('Media/Img_materiel/' ~ materiel.imageMateriel) }}" style="height: 300px; width: 300px" class="card-img-top" alt="Skyscrapers"/>
            </div>
        </div>


    </div>
{% endblock %}
