{% extends 'base.html.twig' %}

{% block container %}
    <div class="container mt-5">
        <div class="d-flex justify-content-start flex-wrap mb-3 mr-2 ">
            <a href="{{ path('app_materiel_index') }}" class="btn btn-arrow mr-3 shadow-sm ">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16"  class="bi bi-arrow-left" viewBox="0 0 16 16">
                    <path fill-rule="evenodd" d="M11.354 1.646a.5.5 0 0 1 0 .708L5.707 8l5.647 5.646a.5.5 0 0 1-.708.708l-6-6a.5.5 0 0 1 0-.708l6-6a.5.5 0 0 1 .708 0z"/>
                </svg>
            </a>
        </div>
        <h1>Modification du Matériel</h1>

        {{ form_start(form) }}
        <label>Titre matériel: </label>
        <div class="form-group mb-1">
            {{ form_widget(form.nomMateriel) }}
        </div>

        <label>Image Matériel: </label>
        <div class="form-group mb-1">
            {{ form_widget(form.imageMateriel) }}
        </div>

        <label>Description matériel: </label>
        <div class="form-group mb-1">
            {{ form_widget(form.descriptionMateriel) }}
        </div>


        <div class="d-flex row">
            <div class="col-lg-8">
                <label>Prix du matériel (en euros): </label>
                <div class="form-group mb-1">
                    {{ form_widget(form.prixMateriel) }}
                </div>
            </div>
            <div class="col-lg-4">
                <label>Nombre d'exemplaire: </label>
                <div class="form-group mb-1">
                    {{ form_widget(form.nombreExemplaireMateriel) }}
                </div>
            </div>
        </div>






        {#        <div class="form-group mb-1">#}
        {#            <label for="cheese">Date de création</label>#}
        {#            {{ form_widget(form.created_at) }}#}
        {#        </div>#}
        {#        <div class="form-group mb-2">#}
        {#            <label for="cheese">Date de mise à jour</label>#}
        {#            {{ form_widget(form.updated_at) }}#}
        {#        </div>#}

        <div class="d-flex flex-row">
            <div class=" p-2">
                {{ form_widget(form.Envoyer) }}
            </div>
        </div>
        {{ form_end(form) }}


    </div>
{% endblock %}
